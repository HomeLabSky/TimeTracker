@model SchoppmannTimeTracker.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Fehler";
}

<div class="text-center mt-5">
    <div class="alert alert-danger" role="alert">
        <h1 class="display-4"><i class="bi bi-exclamation-triangle"></i> Fehler</h1>
        <p class="lead">Es ist ein Fehler aufgetreten.</p>
    </div>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Zurück zur Startseite</a>
</div>