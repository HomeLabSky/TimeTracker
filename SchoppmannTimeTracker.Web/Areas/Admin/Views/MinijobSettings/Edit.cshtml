@model SchoppmannTimeTracker.Web.Areas.Admin.Models.MinijobSettingsViewModel
@{
    ViewData["Title"] = "Minijob-Einstellung bearbeiten";
}

<div class="mb-4 border-bottom pb-2">
    <h1>Minijob-Einstellung bearbeiten</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-area="Admin" asp-controller="MinijobSettings" asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="MonthlyLimit" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="MonthlyLimit" class="form-control" type="number" step="0.01" min="1" />
                            <span class="input-group-text">€</span>
                        </div>
                        <span asp-validation-for="MonthlyLimit" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ValidFrom" class="form-label"></label>
                        <input asp-for="ValidFrom" class="form-control" type="date" />
                        <span asp-validation-for="ValidFrom" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ValidTo" class="form-label"></label>
                        <input asp-for="ValidTo" class="form-control" type="date" />
                        <span asp-validation-for="ValidTo" class="text-danger"></span>
                        <div class="form-text">Leer lassen für unbegrenzte Gültigkeit.</div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                        <div class="form-text">Wenn aktiviert, wird die vorherige aktive Einstellung deaktiviert.</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-area="Admin" asp-controller="MinijobSettings" asp-action="Index" class="btn btn-secondary">Zurück zur Übersicht</a>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Hinweise</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li><strong>Monatliches Limit</strong>: Die maximale Summe in Euro, die ein Minijobber pro Monat verdienen darf, ohne dass zusätzliche Abgaben anfallen.</li>
                    <li><strong>Beschreibung</strong>: Eine kurze Erklärung für diese Einstellung.</li>
                    <li><strong>Gültig ab</strong>: Das Datum, ab dem diese Einstellung wirksam wird.</li>
                    <li><strong>Gültig bis</strong>: Optional. Das Datum, bis zu dem diese Einstellung gilt. Leer lassen für unbegrenzte Gültigkeit.</li>
                    <li><strong>Aktiv</strong>: Wenn aktiviert, wird diese Einstellung zur aktuellen Einstellung.</li>
                </ul>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Achtung:</strong> Das Ändern dieser Einstellung kann sich auf die Berechnungen für alle Mitarbeiter auswirken!
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}